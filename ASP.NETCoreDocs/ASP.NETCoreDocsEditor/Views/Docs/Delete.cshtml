@model ASP.NETCoreDocsEditor.Models.DocksMockup

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Document</h1>

<h3>Are you sure you want to delete this Document?</h3>
<div>
    <h4>Doc</h4>
    <hr />
    <dl class="row">
        <!--Display the document title-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            <!--Display the document content-->
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">

            <textarea id="tiny" style="width: 60vw; height: 80vh" asp-for="Content"></textarea>

        </dd>

    </dl>
    <!--form that deletes the document-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!--link to return to the previous page -->
        <a asp-action="Index">Return</a>
    </form>
</div>